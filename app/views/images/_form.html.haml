= form_for @image, html: {multipart: true} do |f|
  - if @image.errors.any?
    #error_explanation
      %h2= "#{pluralize(@image.errors.count, "error")} prohibited this image from being saved:"
      %ul
        - @image.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :album_id
    = f.number_field :album_id
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :image_src
    = image_tag(@image.image_src.thumb.url) if @image.image_src?
    = f.file_field :image_src
    = f.hidden_field :image_src_cache
  .actions
    = f.submit 'Save'
